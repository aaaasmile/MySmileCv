<% for column in Education.content_columns 
      contenuto_campo = "" 
      if column.name == 'klang'
        contenuto_campo = h @education.language.isoname 
      else
        contenuto_campo = h @education.send(column.name)
      end 
%>

<p>
  <b><%= I18n.t(column.human_name) %>:</b> <%= contenuto_campo%>
</p>
<% end %>

<%= link_to(edit_education_path(@education), class: 'btn btn-default', aria:{label: 'Edit'} ) do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<% end %>
<%= link_to(educations_path, class: 'btn btn-default', aria:{label: 'Back'} ) do %>
  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
<% end %>
