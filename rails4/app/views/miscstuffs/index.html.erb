<h3>Listing miscellaneous stuff</h3>

<%= button_to({:controller => 'curriculum', :action => 'curr_add_all_miscstuff'}, class: 'btn btn-primary', aria:{label: 'Add all'}) do %>
   Add All to Curriculum
<% end %>
<br/>
<table>
  <thead>
  <tr>
  <% for column in Miscstuff.content_columns 
  colonna_nome =  column.human_name
  colonna_nome = 'Lang' if column.human_name == 'Klang' 
%>
    <th><%= colonna_nome %></th>
  <% end %>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% row_odd = false
    for miscstuff in @miscstuffs 
    class_name = row_odd == true ? 'list_line_odd' : 'list_line_even' 
        row_odd = !row_odd%>
  <tr class="<%= class_name %>">
  <% for column in Miscstuff.content_columns
      contenuto_campo = "" 
      if column.name == 'klang'
        contenuto_campo = h miscstuff.language.isoname 
      else
        contenuto_campo = h miscstuff.send(column.name)
      end
%>
    <td data-header="<%= column.human_name %>"><%=contenuto_campo %></td>
  <% end %>
    <td id="cmds">
    <div class="btn-group" role="group" aria-label="Commands">
        <%= link_to(miscstuff, class: 'btn btn-default', aria:{label: 'Show'} ) do %>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <% end %>
        <%= link_to(edit_miscstuff_path(miscstuff), class: 'btn btn-default', aria:{label: 'Edit'} ) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
        <%= link_to(copy_miscstuff_path(miscstuff), class: 'btn btn-default', aria:{label: 'Copy'} ) do %>
          <span class="glyphicon glyphicon-copy" aria-hidden="true"></span>
        <% end %>
        <%= link_to(miscstuff, method: :delete, class: 'btn btn-default', title: 'Delete question',  aria:{label: 'Delete'}, data: { confirm: 'Are you sure?'}) do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
        <%= button_to({:controller => 'curriculum', :action => 'curr_add_miscstuff', :id => miscstuff}, class: 'btn btn-primary', aria:{label: 'Use'}) do %>
            Use
        <% end %>
      </div>
  </tr>
<% end %>
 </tbody>
</table>

<br />
<%= link_to(curriculum_path, class: 'btn btn-default', aria:{label: 'Back'}) do %>
  <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
<% end %>

<%= link_to(new_miscstuff_path, class: 'btn btn-default', aria:{label: 'Add'}) do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
<% end %>
