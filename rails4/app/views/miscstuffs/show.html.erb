<% for column in Miscstuff.content_columns 
      contenuto_campo = "" 
      if column.name == 'klang'
        contenuto_campo = h @miscstuff.language.isoname 
      else
        contenuto_campo = h @miscstuff.send(column.name)
      end 
%>
<p>
  <b><%= column.human_name %>:</b> <%=contenuto_campo%>
</p>
<% end %>

<%= link_to(edit_miscstuff_path(@miscstuff), class: 'btn btn-default', aria:{label: 'Edit'} ) do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<% end %>
<%= link_to(miscstuffs_path, class: 'btn btn-default', aria:{label: 'Back'} ) do %>
  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
<% end %>
