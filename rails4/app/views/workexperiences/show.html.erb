<% for column in Workexperience.content_columns 
      contenuto_campo = "" 
      if column.name == 'klang'
        contenuto_campo = h @workexperience.language.isoname 
      else
        contenuto_campo = h @workexperience.send(column.name)
      end 
%>
<p>
  <b><%= column.human_name %>:</b> <%=contenuto_campo %>
</p>
<% end %>

<%= link_to(edit_workexperience_path(@workexperience), class: 'btn btn-default', aria:{label: 'Edit'} ) do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<% end %>
<%= link_to(workexperiences_path, class: 'btn btn-default', aria:{label: 'Back'} ) do %>
  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
<% end %>

