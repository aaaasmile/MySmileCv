<% for column in Languageskill.content_columns 
      contenuto_campo = "" 
      if column.name == 'klang'
        contenuto_campo = h @languageskill.language.isoname 
      else
        contenuto_campo = h @languageskill.send(column.name)
      end 
%>
<p>
  <b><%= column.human_name %>:</b> <%=contenuto_campo %>
</p>
<% end %>

<%= link_to(edit_languageskill_path(@languageskill), class: 'btn btn-default', aria:{label: 'Edit'} ) do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<% end %>
<%= link_to(languageskills_path, class: 'btn btn-default', aria:{label: 'Back'} ) do %>
  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
<% end %>
