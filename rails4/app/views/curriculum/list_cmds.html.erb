
<p/>
<p><%= button_to 'Load Curriculum', :action => 'load_curr', :controller => 'load_curr' %></p>
<p><%= button_to 'Delete Curriculum', :action => 'delete_curr', :controller => 'load_curr' %></p>
<% if @curriculum.is_empty? %>
<h4>No items in Curriculum</h4>
<% else %>
<br/>
<hr/>
<% if @curriculum.curr_title.length == 0 %>
<h4>Current Curriculum [New*]</h4><br/>
<% else %>
<h4>Current Curriculum [<%= @curriculum.curr_title%>] </h4><br/>
<p><%= button_to 'Save Curriculum', :action => 'update_curr', :controller => 'Savecurr' %></p>
<% end %>
<p><%= button_to 'Reload Curriculum', :action => 'reload_curr', :controller => 'Loadcurr' %></p>
<p><%= button_to 'Create PDF', :action => 'create_pdf' %></p>
<p><%= button_to 'Clear this Curriculum', {:action => 'clear_curriculum'}, :confirm => 'Are you sure?', :method => :post  %></p>
<p><%= button_to 'Save as new Curriculum', :action => 'save_curr', :controller => 'Savecurr' %></p>

<% form_tag :action => 'create_scope' do %>
  <p><%= text_field 'curriculum', 'cur_scope'  %>
  <%= submit_tag "Change Scope" %></p>
  
<% end %>

<br/>
<hr/>


<%# Scope %>
<% if @curriculum.cur_scope %>
  <h4>Scope</h4> 
  <p><%=@curriculum.cur_scope %> |<%= link_to 'X', :action => 'remove_scope' %>| </p>
<% end %>
 
<%# identity %>
<% if @curriculum.cur_identity %>
  <h4>Identity</h4> 
  <p><%=@curriculum.cur_identity.info_compact %> |<%= link_to 'X', :action => 'remove_identity' %>| </p>
<% end %>

<%# picture %>
<% if @curriculum.curr_picture %>
  <h4>Foto</h4>
  <p><img src="<%= url_for(:controller => 'Identpictures',:action => "picture", :id => @curriculum.curr_picture.id) %>"/> 
   |<%= link_to 'X', :action => 'remove_picture' %>| </p>
<% end %>

<%# work experience %>
<% if @curriculum.cur_workexperience_list.size > 0 %>
  <h4>Work experience</h4>
  <%# debug(@curriculum.cur_workexperience_list) %>
  <% @curriculum.cur_workexperience_list.each do |item| %> 
    <%# debug(item) %>
    <p><%= item.info_compact %> |<%= link_to 'X', :action => 'remove_workexperince', :id => item.id  %>| </p>
  <% end %>
<% end %>

