
<p/>
<p><%= link_to('Load', {:action => 'load_curr', :controller => 'loadcurr'}, class: 'btn btn-default') %></p>
<% if @curriculum.is_empty? %>
<h4>No items in Curriculum</h4>
<% else %>
<br/>
<hr/>
<% if @curriculum.curr_title.length == 0 %>
<h4>Current Curriculum [New*]</h4><br/>
<% else %>
  <h4>Curriculum [<%= @curriculum.curr_title%>] </h4><br/>
  <p><%= link_to('Save', {:action => 'update_curr', :controller => 'savecurr'}, class: 'btn btn-default') %></p>
<% end %>

<%= link_to( 'Reload', {:action => 'reload_curr', :controller => 'loadcurr'}, class: 'btn btn-default') %>
<%= link_to( 'Clear', {:action => 'clear_curriculum', :confirm => 'Are you sure?', :method => :post}, class: 'btn btn-default')  %>
<%= link_to( 'Save as...', {:action => 'save_curr', :controller => 'savecurr'}, class: 'btn btn-default') %>
<%= link_to( 'Create PDF', {:action => 'create_pdf'}, class: 'btn btn-default') %>



<%= form_tag '/create_scope' do -%>
  <div style="margin-top: 20px"><%= text_field 'curriculum', 'cur_scope', size: 40 %>
  <%= submit_tag "Change Scope", class: 'btn btn-nomargin btn-default' %></div>
<% end -%>

<br/>
<hr/>


<%# Scope %>
<% if @curriculum.cur_scope %>
  <h4>Scope</h4> 
  <p><%=@curriculum.cur_scope %> <%= link_to('remove_scope', class: 'btn btn-default', aria:{label: 'Remove'})  do %>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    <% end %>
  </p>
<% end %>
 
<%# identity %>
<% if @curriculum.cur_identity %>
  <h4>Identity</h4> 
  <p><%=@curriculum.cur_identity.info_compact %> 
  <%= link_to('remove_identity', class: 'btn btn-default', aria:{label: 'Remove'})  do  %> 
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  <% end %></p>
<% end %>

<%# picture %>
<% if @curriculum.curr_picture %>
  <h4>Foto</h4>
  <p><img src="<%= url_for(:controller => 'identpictures', :action => 'picture', :id => @curriculum.curr_picture.id) %>"/> 
   <%= link_to('remove_picture', class: 'btn btn-default', aria:{label: 'Remove'})  do  %> 
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
   <% end %></p>
<% end %>

<%# work experience %>
<% if @curriculum.cur_workexperience_list.size > 0 %>
  <h4>Work experience</h4>
  <%# debug(@curriculum.cur_workexperience_list) %>
  <% @curriculum.cur_workexperience_list.each do |item| %> 
    <div class='remove_item'>
    <%= button_to({:controller => 'curriculum', :action => 'remove_workexperience', :id => item.id}, class: 'btn btn-default', aria:{label: 'Remove'}, style: "float: right;")  do  %> 
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    <% end %>
    <%= item.info_compact %> 
    </div>
  <% end %>
<% end %>

