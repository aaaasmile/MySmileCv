<h3>Listing technologies</h3>
<%= button_to({:controller => 'curriculum', :action => 'curr_add_all_computerskill'}, class: 'btn btn-primary', aria:{label: 'Add all'}) do %>
   Add All to Curriculum
<% end %>
<br/>
<table>
  <thead>
    <tr>
  <% for column in Computerskill.content_columns
  colonna_nome =  column.human_name
  colonna_nome = 'Lang' if column.human_name == 'Klang' %>
    <th><%= colonna_nome %></th>
  <% end %>
  </tr>
  </thead>
  <tbody>
<% row_odd = false
for computerskill in @computerskills 
  class_name = row_odd == true ? 'list_line_odd' : 'list_line_even' 
        row_odd = !row_odd%>
  <tr class="<%= class_name %>">
  <% for column in Computerskill.content_columns 
      contenuto_campo = "" 
      if column.name == 'klang'
        contenuto_campo = h computerskill.language.isoname 
      else
        contenuto_campo = h computerskill.send(column.name)
      end
%>
    <td><%=contenuto_campo %></td>
  <% end %>
    <td>
      <div class="btn-group" role="group" aria-label="Commands">
        <%= link_to(computerskill, class: 'btn btn-default', aria:{label: 'Show'} ) do %>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <% end %>
        <%= link_to(edit_computerskill_path(computerskill), class: 'btn btn-default', aria:{label: 'Edit'} ) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
        <%= link_to(computerskill, method: :delete, class: 'btn btn-default', title: 'Delete question',  aria:{label: 'Delete'}, data: { confirm: 'Are you sure?'}) do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
        <%= button_to({:controller => 'curriculum', :action => 'curr_add_computer_skill', :id => computerskill}, class: 'btn btn-primary', aria:{label: 'Use'}) do %>
            Use
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to(new_computerskill_path, class: 'btn btn-default', aria:{label: 'Add'}) do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
<% end %>