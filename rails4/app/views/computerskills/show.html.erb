<% for column in Computerskill.content_columns 
      contenuto_campo = "" 
      if column.name == 'klang'
        contenuto_campo = h @computerskill.language.isoname 
      else
        contenuto_campo = h @computerskill.send(column.name)
      end 
%>
<p>
  <b><%= I18n.t(column.human_name) %>:</b> <%=contenuto_campo %>
</p>
<% end %>

<%= link_to(edit_computerskill_path(@computerskill), class: 'btn btn-default', aria:{label: 'Edit'} ) do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<% end %>
<%= link_to(computerskills_path, class: 'btn btn-default', aria:{label: 'Back'} ) do %>
  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
<% end %>
