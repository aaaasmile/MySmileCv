<% for column in Destcurr.content_columns 
      contenuto_campo = "" 
      if column.name == 'kcurr_saved'
        contenuto_campo = h @destcurr.filecurrsaved.curr_title 
      else
        contenuto_campo = h @destcurr.send(column.name)
      end 

%>
<p>
  
  <% if column.name == 'kcurr_saved' %>
     <b><%= 'Curriculum' %>:</b> <%= contenuto_campo %>
     <%= link_to 'View PDF', :action => 'view_curr_pdf', :id => @destcurr %>
  <% elsif column.name == 'inserat_filename'
      next
     elsif column.name == 'inserat' 
  %>
     <b><%= column.human_name %>:</b> <%= contenuto_campo %></p>
     <% contenuto_campo = h @destcurr.send(:inserat_filename) %>
     <p><b><%= 'Desc file ( dir: public/inserat )' %>:</b> <%= contenuto_campo %>
     <%= link_to 'View description', action: 'view_curr_insertion', id: @destcurr %>
  <%else%>
  <b><%= column.human_name %>:</b> <%= contenuto_campo %>
  <% end%>
</p>
<% end %>

<%= link_to(edit_destcurr_path(@destcurr), class: 'btn btn-default', aria:{label: 'Edit'} ) do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<% end %>
<%= link_to(destcurrs_path, class: 'btn btn-default', aria:{label: 'Back'} ) do %>
  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
<% end %>
