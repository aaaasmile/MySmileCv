<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Smile CV" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Smile CV" %>">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <%= render 'layouts/navigation' %>
  </header>
  <main role="main">
      <%= render 'layouts/messages' %>
      <div id="main-page">
        <%= yield %>
      </div>
  </main>

</body>
</html>
