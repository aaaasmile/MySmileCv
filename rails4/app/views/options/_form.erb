<%= form_for(@option) do |f| %>
  <p>User: <%= @option.user_name %></p>
  
  <p><label for="option_language">Language</label><br/>
  <%= f.collection_select :language_id, Language.all, :id, :isoname, prompt: true %>
  <%= text_field 'option', 'user_id', type: "hidden"  %>
  </p>

  <p><label for="option_loadonlylang">Use only one language</label><br/>
   <%= f.check_box :use_only_one_language %></p>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>