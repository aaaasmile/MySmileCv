<% for column in Computerskill.content_columns 
      contenuto_campo = "" 
      if column.name == 'klang'
        contenuto_campo = h @computerskill.language.isoname 
      else
        contenuto_campo = h @computerskill.send(column.name)
      end 
%>
<p>
  <b><%= column.human_name %>:</b> <%=contenuto_campo %>
</p>
<% end %>

<%= link_to 'Edit', :action => 'edit', :id => @computerskill %> |
<%= link_to 'Back', :action => 'list' %>
